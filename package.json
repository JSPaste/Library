{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "jspaste",
	"version": "0.1.0",
	"homepage": "https://jspaste.eu",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jspaste/jspaste.git"
	},
	"license": "EUPL-1.2-or-later",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/jspaste.js",
			"require": "./dist/jspaste.cjs"
		}
	},
	"main": "./dist/jspaste.cjs",
	"module": "./dist/jspaste.js",
	"files": [
		"./dist/"
	],
	"scripts": {
		"build": "pnpm run fix",
		"fix": "pnpm run prettier && pnpm run lint",
		"lint": "pnpm run lint:tsc",
		"lint:tsc": "pnpm exec tsc --noEmit",
		"prettier": "pnpm exec prettier . --write",
		"test": "pnpm run fix && pnpm exec c8 ava"
	},
	"devDependencies": {
		"@ava/typescript": "^4.1.0",
		"@types/node": "^20.11.5",
		"ava": "^6.0.1",
		"c8": "^9.1.0",
		"prettier": "^3.2.4",
		"prettier-plugin-jsdoc": "^1.3.0",
		"prettier-plugin-packagejson": "^2.4.9",
		"typescript": "~5.3.3"
	},
	"packageManager": "pnpm@8.14.1",
	"engines": {
		"node": ">=18.17.0"
	},
	"engineStrict": true
}
